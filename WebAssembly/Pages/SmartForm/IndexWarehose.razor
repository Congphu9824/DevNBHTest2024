@page "/IndexWarehose"
@using Data.Model


<h3>Index Warehose</h3>

<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row">
            <SfGrid DataSource="GridData"
            AllowFiltering="true"
            AllowSorting="true"
            AllowPaging="true"
            Toolbar="@(new List<string>() { "Add", "Edit", "Delete", "Update", "Cancel", "Print", "PdfExport", "Search" })"
            Height="450px"
            @ref="SfGrid"
            ContextMenuItems="@(new List<object>() { "Copy", "Edit", "Delete", "Save", "Cancel", "PdfExport" })">

                <GridEvents TValue="CategoryWarehose" OnActionBegin="OnActionBeginHandler"></GridEvents>
                <GridFilterSettings Type="FilterType.Excel"></GridFilterSettings>
                <GridPageSettings PageSize="10"></GridPageSettings>

                <GridEditSettings 
                    AllowAdding="true"
                    AllowEditing="true"
                    AllowDeleting="true"
                    Mode="EditMode.Dialog"
                    ShowDeleteConfirmDialog="true">
                    <Template>
                        @{
                            var CateWarehose = (context as CategoryWarehose);
                        }
                        <div class="container">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <SfTextBox FloatLabelType="FloatLabelType.Always" Placeholder="CodeWarehose" @bind-Value="@(CateWarehose.CodeWarehose)"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <SfTextBox FloatLabelType="FloatLabelType.Always" Placeholder="NameWarehose" @bind-Value="@(CateWarehose.NameWarehose)"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <SfTextBox FloatLabelType="FloatLabelType.Always" Placeholder="CodeStocker" @bind-Value="@(CateWarehose.CodeStocker)"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <SfTextBox FloatLabelType="FloatLabelType.Always" Placeholder="NameStocker" @bind-Value="@(CateWarehose.NameStocker)"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <SfTextBox FloatLabelType="FloatLabelType.Always" Placeholder="AddressWarehose" @bind-Value="@(CateWarehose.AddressWarehose)"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <SfNumericTextBox FloatLabelType="FloatLabelType.Always" Placeholder="IdAsc" @bind-Value="@(CateWarehose.IdAsc)"></SfNumericTextBox>
                                </div>
                            </div>
                        </div>
                    </Template> 
                </GridEditSettings>

                <GridColumns>
                    <GridColumn Field="@nameof(CategoryWarehose.Id)" HeaderText="Id" IsPrimaryKey="true" Visible="false"></GridColumn>
                    <GridColumn Field="@nameof(CategoryWarehose.CodeWarehose)" HeaderText="CodeWarehose" Width="150"></GridColumn>
                    <GridColumn Field="@nameof(CategoryWarehose.NameWarehose)" HeaderText="NameWarehose" Width="150"></GridColumn>
                    <GridColumn Field="@nameof(CategoryWarehose.CodeStocker)" HeaderText="CodeStocker" Width="150"></GridColumn>
                    <GridColumn Field="@nameof(CategoryWarehose.NameStocker)" HeaderText="NameStocker" Width="150"></GridColumn>
                    <GridColumn Field="@nameof(CategoryWarehose.AddressWarehose)" HeaderText="AddressWarehose" Width="150"></GridColumn>
                </GridColumns>
            </SfGrid>
        </div>
    </div>
</div>


